<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(Book.model_name.human)) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('views.common.show', name: Book.model_name.human.downcase), book %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @books %>

<nav class="page-nav">
    <%= link_to t('views.common.new', name: Book.model_name.human.downcase), new_book_path %>
</nav>

<nav class="page-nav">
    <%= link_to t('views.common.title_index',name:User.model_name.human.downcase), users_path %>
</nav>

<nav class="page-nav">
  <%= button_to t('sign_out'),destroy_user_session_path, method: :delete ,data: { turbo_method: :deletei,turbo_confirm: t('turbo_confirm.sign_out_confirmation')} %>
</nav>
